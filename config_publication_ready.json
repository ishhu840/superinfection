{
  "email": "researcher@university.edu",
  "api_key": "your_ncbi_api_key_here",
  "work_dir": "./publication_analysis",
  
  "data_collection": {
    "large_scale": true,
    "max_assemblies_per_species": 100,
    "target_species": [
      "Aedes aegypti",
      "Aedes albopictus", 
      "Anopheles gambiae",
      "Anopheles stephensi",
      "Culex quinquefasciatus",
      "Culex pipiens",
      "Anopheles funestus",
      "Aedes japonicus",
      "Culex tarsalis"
    ],
    "quality_filters": {
      "min_contig_n50": 10000,
      "assembly_levels": ["Complete Genome", "Chromosome", "Scaffold"],
      "exclude_partial": true
    }
  },
  
  "viral_detection": {
    "blast_evalue": 1e-5,
    "min_identity": 70,
    "min_coverage": 50,
    "blast_threads": 8,
    "viral_databases": [
      "refseq_viral",
      "nt_viral_subset"
    ]
  },
  
  "machine_learning": {
    "enable_ml": true,
    "models": {
      "random_forest": {
        "n_estimators": 1000,
        "max_depth": 10,
        "min_samples_split": 5
      },
      "logistic_regression": {
        "regularization": "l2",
        "max_iter": 1000
      },
      "network_analysis": {
        "community_detection": true,
        "centrality_measures": true
      }
    },
    "cross_validation": {
      "folds": 10,
      "stratified": true,
      "random_state": 42
    }
  },
  
  "statistical_validation": {
    "enable": true,
    "alpha": 0.05,
    "power_threshold": 0.8,
    "effect_size_threshold": 0.3,
    "bootstrap_iterations": 1000,
    "confidence_level": 0.95,
    "multiple_testing_correction": "fdr_bh",
    "sample_size_calculation": true
  },
  
  "performance": {
    "max_workers": 8,
    "batch_size": 200,
    "n_jobs": 6,
    "memory_limit_gb": 16,
    "parallel_downloads": true
  },
  
  "output": {
    "generate_publication_report": true,
    "include_visualizations": true,
    "export_formats": ["json", "csv", "xlsx"],
    "manuscript_statistics": true,
    "supplementary_data": true
  },
  
  "quality_control": {
    "validate_assemblies": true,
    "check_contamination": true,
    "genome_completeness_threshold": 90,
    "exclude_low_quality": true
  },
  
  "research_focus": {
    "viral_families_of_interest": [
      "Flaviviridae",
      "Togaviridae", 
      "Bunyaviridae",
      "Reoviridae",
      "Rhabdoviridae"
    ],
    "analyze_temporal_patterns": true,
    "geographic_analysis": true,
    "host_specificity_analysis": true
  },
  
  "publication_requirements": {
    "minimum_sample_size": 100,
    "required_statistical_power": 0.8,
    "effect_size_reporting": true,
    "confidence_intervals": true,
    "reproducibility_seed": 42,
    "data_availability_statement": true
  }
}